<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Them">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FDD835"
        android:backgroundTint="#FFB300"
        android:orientation="vertical"
        tools:context=".QuanLy_SV">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp">

            <Button
                android:id="@+id/btnTC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:backgroundTint="#FFB300"
                android:text="Trang Chủ"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btnEM"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:backgroundTint="#FFB300"
                android:text="Email"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btnTK"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#FFB300"
                android:text="Tìm Kiếm"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btnDX"
                android:layout_width="137dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#FFB300"
                android:text="Đăng Xuất"
                android:textColor="@color/black" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00897B"
            android:text="THÊM SINH VIÊN"
            android:textAlignment="center"
            android:textColor="#002E89"
            android:textColorHighlight="#FDD835"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="84dp"
                android:layout_height="33dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="32dp"
                android:layout_weight="1"
                android:text="Họ Tên:"
                android:textColor="#00897B"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/edtHT1"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edtHT1"
                android:layout_width="305dp"
                android:layout_height="74dp"
                android:layout_marginStart="116dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="101dp"
                android:layout_height="32dp"
                android:layout_marginTop="136dp"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:text="Ngày Sinh:"
                android:textColor="#00897B"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/edtNS"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edtNS"
                android:layout_width="291dp"
                android:layout_height="59dp"
                android:layout_marginStart="116dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtHT1" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="93dp"
                android:layout_height="31dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="232dp"
                android:layout_weight="1"
                android:text="Số CCCD:"
                android:textColor="#00897B"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edtCCCD"
                android:layout_width="297dp"
                android:layout_height="63dp"
                android:layout_marginStart="116dp"
                android:layout_marginTop="32dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtNS" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="103dp"
                android:layout_height="31dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="316dp"
                android:layout_weight="1"
                android:text="Quê Quán:"
                android:textColor="#00897B"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edtQQ"
                android:layout_width="301dp"
                android:layout_height="67dp"
                android:layout_marginStart="116dp"
                android:layout_marginTop="24dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtCCCD" />

            <Button
                android:id="@+id/btnT1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:backgroundTint="#7CB342"
                android:text="Thêm"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtQQ"
                app:layout_constraintVertical_bias="0.115" />

            <Button
                android:id="@+id/btnEXIT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:backgroundTint="#7CB342"
                android:text="Thoát"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnT2"
                app:layout_constraintVertical_bias="0.036" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</LinearLayout>